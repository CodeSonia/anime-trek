<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>
<div class="container">
  <!-- Existing content -->

  <div data-controller="search-animes">
    <%= form_with url: search_path, method: :get, html: { class: "mb-4", data: { search_animes_target: "form" } } do |f| %>
      <%= f.text_field :query,
                     class: "form-control",
                     placeholder: "Type an anime title",
                     value: params[:query],
                     data: { search_animes_target: "input", action: "keyup->search-animes#update" } %>
      <%= f.button "Search", class: "btn btn-primary", data: { search_animes_target: "button" } %>
    <% end %>

    <div data-search-animes-target="list">
      <%= render "shared/list", animes: @animes %>
    </div>
  </div>
</div>
