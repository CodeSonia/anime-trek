<div class="container">
  <div class="row">
    <div class="col-8">
      <p>Discover, Explore, Simplify:</p>
      <h1>Unleash The Anime Universe</h1>
      <p>
        Introducing AnimeTrek: Your Ultimate Anime Exploration Companion.
        You can discover new anime series, explore genres, and deep dive into captivating story lines.
      </p>
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search...">
        <div class="input-group-append">
          <button class="btn btn-primary" type="button">Search</button>
        </div>
      </div>
    </div>
    <div class="col4">
      <%# Place holder for image %>
    </div>
  </div>
    <h1>All Animes</h1>
    <ul>
      <% @animes.each do |anime| %>
        <li>
          <%= link_to anime.title, anime_path(anime) %>
        </li>
        <li> <%= anime.synopsis %></li>
        <li> <%= anime.date_start %></li>
        <li> <%= anime.date_finish %></li>
        <li> <%= anime.genre %></li>
        <li> <%= anime.rating %></li>
        <li> <%= image_tag anime.image %></li>
      <% end %>
    </ul>
</div>
