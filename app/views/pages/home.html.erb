<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<h1>All Animes</h1>
<ul>
  <% @animes.each do |anime| %>
    <li>
      <%= link_to anime.title, anime_path(anime) %>
    </li>
    <li> <%= anime.synopsis %></li>
    <li> <%= anime.date_start %></li>
    <li> <%= anime.date_finish %></li>
    <li> <%= anime.genre %></li>
    <li> <%= anime.rating %></li>
    <li> <%= image_tag anime.image %></li>
  <% end %>
</ul>
