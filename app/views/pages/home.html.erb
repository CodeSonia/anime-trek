<div class="container container-parent">
  <div class="blurr-img">
    <%= cl_image_tag("https://res.cloudinary.com/dtjuz4kkr/image/upload/v1686840960/blurr_azumrg.png", height: 500) %>
  </div>
  <div class="row mt-8">
    <div class="col-8 mt-5">
      <p class="slogan">Discover, Explore, Simplify:</p>
      <h1 class="text-uppercase landing-header">Unleash The Anime Universe</h1>
      <p class="support-text text-muted">
      Introducing AnimeTrek: Your Ultimate Anime Exploration Companion. Embark on a journey to discover new anime series, explore a myriad of genres, and immerse yourself in captivating storylines that will transport you to extraordinary worlds.
      </p>
      <div>
      <%= form_with url: search_path, method: :get, html: { class: "d-flex mb-4 search-container" } do |f| %>
      <%= f.text_field :query,
                     class: "form-control search-text-field",
                     placeholder: "Type an anime title",
                     value: params[:query] %>
      <%= f.submit "Search", class: "button btn-search" %>
      <% end %>
    </div>
      <div class="mt-4 mb-4 form-inline">
        <%= form_with url: search_path, method: :get, html: { class: "d-flex" } do |f| %>
          <div class="form-group icon-parent">
          <span class="mag-icon"><i class="fas fa-thin fa-magnifying-glass"></i></span>
            <%= f.text_field :query, class: "form-control input-form", placeholder: "Search for an anime...", value: params[:query] %>

          </div>
            <%= f.button "Search", class: "btn primary-button" %>
        <% end %>
      </div>
    </div>

    <div class="col-4">
      <%= cl_image_tag("https://res.cloudinary.com/dtjuz4kkr/image/upload/v1686823182/anime_girl_tutzus.png", height: 500, crop: :fill) %>
    </div>
  </div>


  <section class="mt-5">
  <div class="container">
    <h2 class="text-center" >Features</h2>
    <div class="mx-auto">
      <div class="row mb-n24">
        <div class="mt-5 col-12 col-xl-4 mb-24">
          <div class="mx-auto text-center">
            <h6 class="mb-3" >Discover & Explore</h6>
            <p class="text-secondary" >Whether you're into action-packed adventures, heartwarming romances, or mind-bending mysteries, AnimeTrek has something for everyone.</p>
            <%# <div class=""><img class="d-block w-100" src="flaro-assets/images/features/peoples.png" alt=""/></div> %>
          </div>
        </div>
        <div class="mt-5 col-12 col-xl-4 mb-24">
          <div class="position-relative pt-10 px-14 pb-52 h-100 pb-xl-64 mw-sm mw-xl-none mx-auto text-center bg-info-light rounded-4">
            <h6 class="fs-6 mb-3" >Watch List Wonder</h6>
            <p class="text-secondary">Keep track of your anime journey by creating a personalized watchlist on AnimeTrek, allowing you to easily add, remove, and mark anime series as watched</p>
            <%# <div class="position-absolute bottom-0 start-0 w-100 px-10 mb-n12 mb-xl-n10"><img class="d-block w-100" src="flaro-assets/images/features/reports.png" alt=""/></div> %>
          </div>
        </div>
        <div class="mt-5 col-12 col-xl-4 mb-24">
          <div class="position-relative pt-10 px-14 pb-52 h-100 pb-xl-64 mw-sm mw-xl-none mx-auto text-center bg-info-light rounded-4">
            <h6 class="fs-6 mb-3" >Points and Achievements</h6>
            <p class="text-secondary" >Unlock your anime prowess and earn points for rating anime, writing engaging reviews and more. Unlock a dazzling array of achievements and badges! </p>
            <%# <div class="position-absolute bottom-0 start-0 w-100 px-10 mb-n12 mb-xl-n10"><img class="d-block w-100" src="flaro-assets/images/features/users.png" alt=""/></div> %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>







    <h1>All Animes</h1>
    <ul>
      <% @animes.each do |anime| %>
        <li>
          <%= link_to anime.title, anime_path(anime) %>
        </li>
        <li> <%= anime.synopsis %></li>
        <li> <%= anime.date_start %></li>
        <li> <%= anime.date_finish %></li>
        <li> <%= anime.genre %></li>
        <li> <%= anime.rating %></li>
        <li> <%= image_tag anime.image %></li>
      <% end %>
    </ul>
</div>
